<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DomainSearch.MainPage"
    x:DataType="domainSearch:ViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:domainSearch="using:DomainSearch">

    <ScrollView>
        <VerticalStackLayout Padding="32">
            <Label Text="Domain:" FontAttributes="Bold" />
            <Label Text="{Binding Domain}" Margin="0,0,0,16" />
            <Label Text="Registrar:" FontAttributes="Bold" />
            <Label Text="{Binding Registrar}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
